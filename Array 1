package vijesh;

public class array1 {

	public static void main(String[] args) {
		String[] words={"abc","bcd","aba","cfg","madam"};
		String word=" ";
		for (int i=0;i<words.length;i++)
		{
			StringBuilder rev = new StringBuilder(words[i]);
			StringBuilder reversed =rev.reverse();
			if (words[i].equals(reversed.toString()))
			{
				word=words[i];
				break;
			}
			
		}
		System.out.println(word);
	}

}
